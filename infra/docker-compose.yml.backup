volumes:
  pg_data:
  static:
  media:

services:
  db:
    image: postgres:13.0-alpine
    container_name: foodgram_db
    restart: always
    volumes:
      - pg_data:/var/lib/postgresql/data/
    env_file: .env
  
  backend:
    build:
      context: ../backend
      dockerfile: Dockerfile
    container_name: foodgram_backend
    restart: always
    volumes:
      - static:/app/static/
      - media:/app/media/
    depends_on:
      - db
    env_file: .env

  frontend:
    build:
      context: ../frontend
      dockerfile: Dockerfile
    container_name: foodgram_frontend
    command: >
      sh -c "
        mkdir -p /app/static &&
        cp -rf /usr/share/nginx/html/* /app/static/
      "
    volumes:
      - static:/app/static/
    restart: "no"

  nginx:
    build:
      context: ../nginx
      dockerfile: Dockerfile
    container_name: foodgram_nginx
    ports:
      - "85:80"
    volumes:
      - static:/var/html/static/
      - media:/var/html/media/
    depends_on:
      - backend
      - frontend
    restart: always